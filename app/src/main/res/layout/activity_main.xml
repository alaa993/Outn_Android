                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.80">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
